//Örnek: centigrade to Fahrenheit function (Anonymous function)

let toFahrenhayt=function(){
    let degree, result;
    degree=Number(prompt("degree"));
    result=(degree*9/5)+32;
    console.log(result);
}
toFahrenhayt();

//Sample:5 positive or negative function(anonymous)
function negativePositive()
        {
            let sayi;
            sayi=Number(prompt("enter number: "));
            if(sayi>0){
                alert("number is positive");
            }
            else if(sayi<0){
                alert("number is negative");
            }
            else{
                alert("number is 0");
            }                
        }
       /* console.log(Math.sign(sayi));*/
negativePositive();
//Örnek6:  1'den 10'a kadar sayıların toplamı ancak 5'e bölünebilen sayılar hariç

let totalFiveExcluded=function(){
    let sum=0;
    for(let i=1;i<=10;i++){
        if(i%5===0) continue;
        sum+=i;
    }
    console.log("toplam"+sum);
}
totalFiveExcluded();


let randomGenerate=function () {
    let randomSayi=[];
    numara=Number(prompt("sayı giriniz"));
    for(let i=0; i<=numara;i++){
       randomSayi=Math.random()*10+1;
    }
  }

//Sample :Calculate factoriel
function calculateFactoriel(){
    var faktoriel=1;
    num = Number(prompt("Enter the number: "));
    if(num>=0){
        for(var a=1;a<=num;a++) faktoriel*=i;
        window.alert("factoriel of the number  "+num+": "+faktoriel);
    }
}
//Sample: reverse
//exam: bardak  ==> kadrab
function reverseTheString(str) {
    let newString="";
    for(let i= str.length-1; i>=0; i--) newString+=str[i];
    return newString;
  }
  const string = prompt("Please enter a string: ");
  const result = reverseTheString(string);
  console.log(result);
