//HW
//S-1) Algorithm that shows the days of the week according to the number entered by the user (switch-case)
var weeklydate = new Date();
var day = weeklydate.getDay();
switch(day){
    case 1: alert("monday"); break;
    case 2: alert("tuesday"); break;
    case 3: alert("wednesday"); break;
    case 4: alert("thursday"); break;
    case 5: alert("friday"); break;
    case 6: alert("saturday"); break;
    case 7: alert("sunday"); break;
}

//S-2) midterm final: arrow function
//midterm%40+final%60
//1-59   FF
//55-60  CC
//61-80  BB
//81-100 AA
function calculate(avg) {
    var midterm = window.prompt("Enter your midterm note");
    var final = window.prompt("Enter your final note");
    var avg=(midterm*0.40)+(final*0.60);
    window.alert(avg);
    if(avg>=1 && avg<=54) alert("Your grade is FF");
    else if(avg<=55 && avg>=60) alert("Your grade is CC");
    else if(avg<=61 && avg>=80) alert("Your grade is BB");
    else if(avg<=81 && avg>=100) alert("Your grade is AA");
    else alert("Please enter a valid value.")
  }
calculate();

//S4-) how many odd and even numbers between 1-99(included) ?
function oddEven(numbers) {
    var oddNumber=0;
    var evenNumber=0;
    var i;
    for(i=1;i<=99;i++){
        if(i%2==0) oddNumber++;
        else evenNumber++;
    }
    console.log(oddNumber);
    console.log(evenNumber);
  }

oddEven();


